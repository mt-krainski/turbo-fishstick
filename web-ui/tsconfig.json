{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "outDir": "build",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Node",
    "types": ["vite/client", "node"]
    
  }
}
